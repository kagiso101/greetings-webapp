<div class="main">
    <div class="number1">
        <h1>Greetings App</h1>
    </div>

    <!--form -->
    <form action="/greetings" method="POST">
        <div class="number2">
            {{#if messages.error}}
            <div class="error">
                {{messages.error}}
            </div>
            {{/if}}
            <input type="text" name="nameInput" id="inputElements" placeholder="Enter your name"
                value="{{textBoxValue.nameInput}}">
            <div class="number3">
                <label>
                    <input type="radio" name="selector" value="english">English
                </label>
                <label>
                    <input type="radio" name="selector" value="French">French
                </label>
                <label>
                    <input type="radio" name="selector" value="Spanish">Spanish
                </label>
            </div class='button'>
            <button id="greetButton" type="submit">greet</button>
        </div>
        <div class="number4">
            <div class="greetedUsers">
                <p>{{greetDisplay}}</p>
                <p>{{counter}}</p>
            </div>
            <h1 id="txtBox"></h1>
            <a href="/greeted">Greeted</a></button>
            <br>
            <a href="/reset">reset</a></button>
        </div>
    </form>

</div>
<script>
    setTimeout(function () {
        document.querySelector(".error").innerHTML = ""
    }, 2000)
</script>